<view class="content"><uni-nav-bar vue-id="1" title="动画绘本馆" fixed="true" bind:__l="__l"></uni-nav-bar><view class="status_bar"></view><block wx:for="{{indexData}}" wx:for-item="option" wx:for-index="index" wx:key="index"><view style="width:100%;"><block wx:if="{{option.partType==='BANNER'}}"><swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"><block wx:for="{{option.bannerList}}" wx:for-item="item" wx:for-index="num" wx:key="bannerCode"><swiper-item><view class="swiper-item"><image src="{{item.bannerImageUrl}}"></image></view></swiper-item></block></swiper></block><block wx:else><block wx:if="{{option.partType==='WIKI'}}"><view class="wiki"><block wx:for="{{option.wikiList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><navigator class="wiki_item" url="/pages/list/list"><image src="{{item.imageUrl}}"></image><text>{{item.sortTitle}}</text></navigator></block></view></block><block wx:else><block wx:if="{{option.partType==='SUBJECT'}}"><view class="block"><view class="header">{{option.partTitle}}</view><image class="recommend_image" src="{{option.subjectDetails.topicImg}}"></image><text class="topicTitle">{{option.subjectDetails.topicTitle}}</text></view></block><block wx:else><block wx:if="{{option.partType==='AD'}}"><view class="block"><image class="recommend_image" src="{{option.adDetails.imageUrl}}"></image></view></block><block wx:else><block wx:if="{{option.partType==='CUSTOM'}}"><view class="block"><view class="header">{{option.partTitle}}</view><view class="book_list"><block wx:for="{{option.bookList}}" wx:for-item="item" wx:for-index="index" wx:key="bookCode"><view class="book_item"><image lazy-load src="{{item.coverUrl}}"></image><text>{{item.bookName}}</text></view></block></view></view></block></block></block></block></block></view></block></view>